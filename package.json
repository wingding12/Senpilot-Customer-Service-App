{
  "name": "customer-service-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Human-in-the-Loop Customer Service Platform with AI Voice Agent and Copilot",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:web": "pnpm --filter web-client dev",
    "build": "pnpm -r run build",
    "db:generate": "pnpm --filter database generate",
    "db:migrate": "pnpm --filter database migrate",
    "db:seed": "pnpm --filter database seed",
    "db:studio": "pnpm --filter database studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "pnpm -r run clean && rm -rf node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

