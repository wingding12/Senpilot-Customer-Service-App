# ===========================================
# Customer Service Platform - Environment
# ===========================================
# Copy this file to .env and fill in your values

# -----------------------------
# Database
# -----------------------------
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/customer_service?schema=public"

# -----------------------------
# Redis
# -----------------------------
REDIS_URL="redis://localhost:6379"

# -----------------------------
# Server
# -----------------------------
PORT=3001
NODE_ENV=development

# -----------------------------
# Telnyx (Telephony)
# -----------------------------
TELNYX_API_KEY=your_telnyx_api_key
TELNYX_PUBLIC_KEY=your_telnyx_public_key
TELNYX_CONNECTION_ID=your_telnyx_connection_id
TELNYX_PHONE_NUMBER=+1234567890

# -----------------------------
# Retell AI (Voice Agent)
# -----------------------------
RETELL_API_KEY=your_retell_api_key
RETELL_AGENT_ID=your_retell_agent_id

# -----------------------------
# AssemblyAI (Transcription & Intent)
# -----------------------------
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# -----------------------------
# OpenAI (Embeddings for pgvector)
# -----------------------------
OPENAI_API_KEY=your_openai_api_key

# -----------------------------
# Frontend URL (CORS)
# -----------------------------
FRONTEND_URL=http://localhost:5173

# -----------------------------
# Webhook Base URL (for Telnyx/Retell callbacks)
# Use ngrok URL for local development
# -----------------------------
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io
